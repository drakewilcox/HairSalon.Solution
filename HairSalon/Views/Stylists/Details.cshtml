@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model HairSalon.Models.Stylist;

<div class="home">
  <div class="card text-white bg-dark mb-3" style="width: 20rem;">
    <div class="text-center card-header">
      <h4>@Html.DisplayFor(model => model.Name)'s Clients:</h4>
    </div>
    <div class="card-body text-center">
      @if (@Model.Clients.Count == 0)
      {
        <p> No Clients have been added yet!</p>
      }
      @foreach (Client client in @Model.Clients)
      {
       <p><a href="/Clients/Details/@client.ClientId">@client.Name</a></p>
      }
    </div>
    <hr>
    <p class="text-center">
      @Html.ActionLink("Add A Client", "Create", "Clients", new { id = Model.StylistId }, htmlAttributes: new { @class = "btn btn-light btn-md" })

      @Html.ActionLink("Back to Stylist List", "Index", null, htmlAttributes: new { @class = "btn btn-light btn-md" })
    </p>
  </div>
</div>