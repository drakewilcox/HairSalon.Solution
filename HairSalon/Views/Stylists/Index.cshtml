@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<div class="home">
  <div class="card text-white bg-dark mb-3" style="width: 20rem;">
    <div class="text-center card-header">
      <h4>Stylists</h4>
    </div>
    <div class="card-body">
      @if (@Model.Count == 0)
      {
        <p> No Stylists have been added yet!</p>
      }
      @foreach (Stylist stylist in Model)
      {
        <p class="text-center"> @Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId}, new { @class = "link" })</p>
      }
    </div>
    <hr>
    <p class="text-center">
      @Html.ActionLink("Add New Stylist", "Create", null, htmlAttributes: new { @class = "btn btn-light btn-md" })
    </p>
  </div>
</div>
