@{
  Layout = "_Layout";
}
@model HairSalon.Models.Client

<div class="home">

  <div class="card text-white bg-dark mb-3" style="max-width: 32rem;">
    <div class="text-center card-header">
      <h4>Add A New Client for @ViewBag.Stylist.Name</h4>
    </div>
    <div class="text-center card-body">
      @using (Html.BeginForm())
      {
        <input type="hidden" name="StylistId" value="@ViewBag.Stylist.StylistId">
       <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class="form-control", @required  = "required"})
      </div>
      <div class="form-group">
        @Html.LabelFor(model => model.PhoneNumber)
        @Html.TextBoxFor(model => model.PhoneNumber, new { @class="form-control"})
      </div>
      <div class="form-group">
        @Html.LabelFor(model => model.HairStyle)
        @Html.TextBoxFor(model => model.HairStyle, new { @class="form-control"})
      </div>
      <input type="submit" value="Add" class="btn btn-light">
      }
    </div>
  </div>
</div>