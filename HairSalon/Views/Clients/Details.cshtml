@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client 

<div class="home">
  <div class="card text-white bg-dark mb-3" style="width: 20rem;">
    <div class="text-center card-header">
      <h4>Client Details:</h4>
    </div>
    <div class="card-body">
      <p>Name: @Html.DisplayFor(model => model.Name) </p>
      <p>Stylist: @ViewBag.Stylist</p>
      <p>Phone: @Html.DisplayFor(model => model.PhoneNumber)</p>
      <p>HairStyle: @Html.DisplayFor(model => model.HairStyle) </p>
      <hr>
    </div>
    <p class="text-center">
      @Html.ActionLink("Back to Client List", "Details", "Stylists", new {id = Model.StylistId}, htmlAttributes: new { @class = "btn btn-light btn-md" })
      @Html.ActionLink("Delete Client", "Delete", new { id = Model.ClientId }, htmlAttributes: new { @class = "btn btn-light btn-md" })
    </p>
  </div>
</div>
